<div data-hook="admin_image_form_fields" class="row">
  <div class="col-md-6">
    <div data-hook="file" class="form-group">
      <%= f.label :attachment, Spree.t(:filename) %>
      <%= f.file_field :attachment %>
    </div>
    <div data-hook="variant" class="form-group">
      <%= f.field_container :variants, class: ['form-group'] do %>
          <%= f.label :variant_ids, Spree.t(:variants) %>
          <%= f.hidden_field :variant_ids, value: @image.variant_ids.join(',') %>
      <% end %>
    </div>
  </div>
  <div data-hook="alt_text" class="col-md-6">
    <div class="form-group">
      <%= f.label :alt, Spree.t(:alt_text) %>
      <%= f.text_area :alt, :rows => 4, :class => 'form-control' %>
    </div>
  </div>
</div>

<script type="text/javascript">
  Spree.current_product_id = <%= @product.id %>;
  new window.ImageVariantIds();
</script>
